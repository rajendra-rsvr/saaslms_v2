@page "/index"
<style>
    /* Welcome Title */
    .welcome-title {
        text-align: center;
        font-size: 3em;
        font-weight: bold;
        color: #2c3e50;
        margin-top: 50px;
    }

    /* Subtitle Text */
    .welcome-subtitle {
        text-align: center;
        font-size: 1.2em;
        color: #34495e;
        margin-bottom: 30px;
    }

    /* Call to Action Section */
    .cta-section {
        text-align: center;
        margin-top: 20px;
    }

    .cta-button {
        font-size: 1.1em;
        padding: 10px 20px;
        margin: 10px;
        border: none;
        background-color: #3498db;
        color: white;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .cta-button:hover {
            background-color: #2980b9;
        }

    /* Decorative Section */
    .decorative-section {
        background-color: #ecf0f1;
        padding: 40px;
        margin-top: 50px;
        text-align: center;
        border-radius: 8px;
    }

    .feature-title {
        font-size: 2.5em;
        color: #2c3e50;
        font-weight: bold;
    }

    .feature-description {
        font-size: 1.1em;
        color: #7f8c8d;
        margin-top: 10px;
        line-height: 1.5;
    }

</style>
<link href="~/css/styles.css" rel="stylesheet" />

<h1 class="welcome-title">Welcome to Multi-Tenant RSVR </h1>


<p class="welcome-subtitle">Streamlining your tenant and subscription management, all in one place.</p>



@* Decorative Section *@
<div class="decorative-section">
    <h2 class="feature-title">Seamless Multi-Tenant Management</h2>
    <p class="feature-description">Manage tenants, subscriptions, and user roles with ease. Scale your business without limitations.</p>
</div>

